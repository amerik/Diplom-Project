#forgot_password_modal.modal.auth.slide-in
  .modal-dialog
    .wrapper
      .close{:'data-dismiss' => "modal",  :'aria-label' => "Close"}
        %img{:src => '/assets/close_shape.png'}

      .h1 Forgot your password?
      .marginbottom-25
        .ui.input
          .label-text Your E-mail:
          .input-container
            %span.error_message A user with such an email address does not exit !
            %input{:type => 'text', :placeholder => 'Enter your e-mail'}

      .margintop-40
        .ui.button.large.fill.background.background-prymary-gradient.color.color-white.border.rounded-8.with_shadow.blue_button Restore password
      .margintop-20
        .ui.button.large.color.color-dark.border.rounded-8.border-2.border-light-gray.grey_button.back_to_login Back to login
