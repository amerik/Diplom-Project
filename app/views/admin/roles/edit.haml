= render partial: 'layouts/admin/header'
= render partial: 'layouts/admin/left_menu'

.content_wrapper
  = render partial: 'layouts/admin/left_detail_menu' 
  .data_content
    %ul.paths
      %li= link_to t("view.admin.common.roles"), admin_roles_path
      %li= link_to t("view.admin.role.edit_role"), new_admin_role_path
    .h3.marginbottom-20= t("view.admin.role.edit_role")

    = form_for @role, :url => { :controller => @entity_table, :action => 'update', :id => @role.id }, :method => :post do |f|

      = render partial: "admin/#{@entity_table}/form_data", :locals => { :f => f, :entity => @role }

      .clearfix
      .margintop-30
        .message_errors
          %ul
        .loading_button
          %img{:src => '/assets/admin/loading_button.gif'}
        = link_to 'save', '#', :class => 'default_button dark update_entity'