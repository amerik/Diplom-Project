= render partial: 'layouts/admin/header'
= render partial: 'layouts/admin/left_menu'                         

.content_wrapper
  = render partial: 'layouts/admin/left_detail_menu' 
  .data_content
    %ul.paths
      %li= link_to 'Tasks', admin_tasks_path

    .h3.marginbottom-20= 'Tasks'
    
    .default_table
      %table.table.table-striped.table-condensed
        %tr
          %th Achivment
          %th Description
          %th Status

        - @elements.each do |element|
          %tr{:data => {:id => element.id}}
            %td 
              %img{:src => element.achivment.image_url}
            %td= element.decorate.description
            %td= element.decorate.status

    = admin_pagginate(@url, @params_pagginate, @page, params)