= render partial: 'layouts/admin/header'
= render partial: 'layouts/admin/left_menu'

.content_wrapper
  = render partial: 'layouts/admin/left_detail_menu' 
  .data_content
    %ul.paths
      %li= link_to 'Page Helps', admin_page_helps_path
      %li= link_to 'Edit Page Help', edit_admin_page_help_path(@page_help)
    .h3.marginbottom-20 Edit Page Help

    = form_for @page_help, :url => { :controller => @entity_table, :action => 'update', :id => @page_help.id }, :method => :put do |f|

      = render partial: "admin/#{@entity_table}/form_data", :locals => { :f => f, :entity => @page_help }

      .clearfix
      .margintop-30
        .message_errors
          %ul
        .loading_button
          %img{:src => '/assets/admin/loading_button.gif'}
        = link_to 'save', '#', :class => 'default_button dark update_entity'