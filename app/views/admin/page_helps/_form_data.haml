.row
  .col-md-6.col-xs-12

    .margintop-20

    .margintop-20
    .default_label Name
    %input.default_input_text.width-350{:name => 'translation[name]', :value => entity.name}

    .margintop-20
    .default_label Category
    = admin_select_standart(Category.sort, entity.category_id.nil? ? nil : entity.category, 'page_help[category_id]', '', false)


    .margintop-20
    .default_label Description
    %textarea.default_input_text.width-350{:name => 'translation[description]', :style => 'height: 300px'}= entity.description
