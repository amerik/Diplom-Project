= render partial: 'layouts/admin/header'
= render partial: 'layouts/admin/left_menu'

.content_wrapper
  = render partial: 'layouts/admin/left_detail_menu' 
  .data_content
    %ul.paths
      %li= link_to t("view.admin.common.cities"), admin_cities_path
      %li= link_to t("view.admin.city.edit_city"), edit_admin_city_path(@city)
    .h3.marginbottom-20= t("view.admin.city.edit_city")

    = form_for @city, :url => { :controller => @entity_table, :action => 'update', :id => @city.id }, :method => :put do |f|

      = render partial: "admin/#{@entity_table}/form_data", :locals => { :f => f, :entity => @city }

      .clearfix
      .margintop-30
        .message_errors
          %ul
        .loading_button
          %img{:src => '/assets/admin/loading_button.gif'}
        = link_to 'save', '#', :class => 'default_button dark update_entity'