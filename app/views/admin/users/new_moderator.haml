= render partial: 'layouts/admin/header'
= render partial: 'layouts/admin/left_menu'

.content_wrapper
  = render partial: 'layouts/admin/left_detail_menu' 
  .data_content
    %ul.paths
      %li= link_to t("view.admin.user.moderators"), moderators_admin_users_path
      %li= link_to t("view.admin.user.new_moderator"), new_moderator_admin_users_path
    .h3.marginbottom-20= t("view.admin.user.new_moderator")

    = form_for User.new, :url => { :controller => @entity_table, :action => 'create' }, :method => :post do |f|

      = render partial: "admin/#{@entity_table}/moderator_form_data", :locals => { :f => f, :user => User.new }

      .clearfix
      .margintop-30
        .message_errors
          %ul
        .loading_button
          %img{:src => '/assets/admin/loading_button.gif'}
        = link_to 'create', '#', :class => 'default_button dark create_entity'