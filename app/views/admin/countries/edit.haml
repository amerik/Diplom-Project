= render partial: 'layouts/admin/header'
= render partial: 'layouts/admin/left_menu'

.content_wrapper
  = render partial: 'layouts/admin/left_detail_menu' 
  .data_content
    %ul.paths
      %li= link_to t("view.admin.common.countries"), admin_countries_path
      %li= link_to t("view.admin.country.edit_country"), edit_admin_country_path(@country)
    .h3.marginbottom-20= t("view.admin.country.edit_country")

    = form_for @country, :url => { :controller => @entity_table, :action => 'update', :id => @country.id }, :method => :put do |f|

      = render partial: "admin/#{@entity_table}/form_data", :locals => { :f => f, :entity => @country }

      .clearfix
      .margintop-30
        .message_errors
          %ul
        .loading_button
          %img{:src => '/assets/admin/loading_button.gif'}
        = link_to 'save', '#', :class => 'default_button dark update_entity'