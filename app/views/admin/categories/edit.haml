= render partial: 'layouts/admin/header'
= render partial: 'layouts/admin/left_menu'

.content_wrapper
  = render partial: 'layouts/admin/left_detail_menu' 
  .data_content
    %ul.paths
      %li= link_to 'Categories', admin_categories_path
      %li= link_to 'Edit Review', edit_admin_category_path(@category)
    .h3.marginbottom-20 Edit Category

    = form_for @category, :url => { :controller => @entity_table, :action => 'update', :id => @category.id }, :method => :put do |f|

      = render partial: "admin/#{@entity_table}/form_data", :locals => { :f => f, :entity => @category }

      .clearfix
      .margintop-30
        .message_errors
          %ul
        .loading_button
          %img{:src => '/assets/admin/loading_button.gif'}
        = link_to 'save', '#', :class => 'default_button dark update_entity'