= render partial: 'layouts/admin/header'
= render partial: 'layouts/admin/left_menu'

.content_wrapper
  = render partial: 'layouts/admin/left_detail_menu' 
  .data_content
    %ul.paths
      %li= link_to 'Pages', admin_pages_path
      %li= link_to 'Edit page', edit_admin_page_path(@page)
    .h3.marginbottom-20 Edit page

    = form_for @page, :url => { :controller => @entity_table, :action => 'update', :id => @page.id }, :method => :put do |f|

      = render partial: "admin/#{@entity_table}/form_data", :locals => { :f => f, :entity => @page, :meta_tag => @page.meta_tag }

      .clearfix
      .margintop-30
        .message_errors
          %ul
        .loading_button
          %img{:src => '/assets/admin/loading_button.gif'}
        = link_to 'save', '#', :class => 'default_button dark update_entity_ck'